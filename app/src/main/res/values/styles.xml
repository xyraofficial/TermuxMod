<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Termux" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:colorPrimary">@color/ios_glass_background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorAccent">@color/ios_glass_accent</item>
        <item name="android:alertDialogTheme">@style/TermuxAlertDialogStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TermuxAlertDialogStyle" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorAccent">@color/ios_glass_accent</item>
        <item name="android:background">@drawable/ios_glass_bg</item>
        <item name="android:textColorPrimary">@color/ios_glass_on_surface</item>
        <item name="android:windowTitleStyle">@style/iOSDialogTitle</item>
    </style>

    <style name="iOSDialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/ios_glass_on_surface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
